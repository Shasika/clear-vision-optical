version: '3.8'

services:
  # Frontend development server
  frontend:
    build:
      context: .
      target: frontend-builder
    ports:
      - "5173:5173"
    volumes:
      - ./src:/app/src
      - ./public:/app/public
      - ./index.html:/app/index.html
    command: npm run dev -- --host 0.0.0.0
    environment:
      - NODE_ENV=development
    networks:
      - optical-network

  # Backend API server
  backend:
    build:
      context: .
      target: backend-builder
    ports:
      - "3001:3001"
    volumes:
      - ./server:/app/server
      - ./public:/app/public
    command: npm run dev
    working_dir: /app/server
    environment:
      - NODE_ENV=development
      - PORT=3001
    networks:
      - optical-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Production build (for testing)
  production:
    build:
      context: .
      target: production
    ports:
      - "3001:3001"
    environment:
      - NODE_ENV=production
      - PORT=3001
    volumes:
      - optical-data:/app/public/data
      - optical-images:/app/public/images
    networks:
      - optical-network
    profiles:
      - production

networks:
  optical-network:
    driver: bridge

volumes:
  optical-data:
  optical-images: